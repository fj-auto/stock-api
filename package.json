{
  "name": "stock-price-api",
  "version": "1.0.0",
  "description": "股票价格获取API服务",
  "main": "dist/app.js",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc --project tsconfig.json",
    "build:server": "tsc --project tsconfig.json",
    "client": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "install:all": "npm ci || npm install && cd client && (npm ci || npm install)",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\"",
    "build:all": "npm run build:server && npm run client:build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.2.0",
    "qs": "^6.14.0",
    "yahoo-finance2": "^2.13.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.17.23",
    "@types/qs": "^6.9.18",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
